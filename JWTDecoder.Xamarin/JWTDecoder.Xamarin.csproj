<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackOnBuild>true</PackOnBuild>
    <Version>0.10.1</Version>
    <Authors>VuLe</Authors>
    <Description>This is a fork version from Dale Myszewski. Sometimes you just need to decode the payload of a JWT Token in a C# client. This library aims to do just that.</Description>
    <SynchReleaseVersion>false</SynchReleaseVersion>
    <PackageId>JWTDecoder-NetStandard2.Xamarin</PackageId>
    <PackageProjectUrl>https://github.com/jerryno6/JWT-Decoder</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/jerryno6/JWT-Decoder</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Helpers\" />
  </ItemGroup>
</Project>
